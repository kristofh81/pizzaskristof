{% extends '::base.html.twig' %}

{% block body -%}
    <h1>OrderedProduct</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Extra</th>
                <td>{{ entity.extra }}</td>
            </tr>
            <tr>
                <th>Extraprice</th>
                <td>{{ entity.extraPrice }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('orderedproduct') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('orderedproduct_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
